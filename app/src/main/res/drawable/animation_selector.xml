<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/on" android:state_activated="true" android:drawable="@drawable/light_on"/>
    <item android:id="@+id/off" android:state_activated="false" android:drawable="@drawable/light_off"/>

    <transition
        android:fromId="@+id/on"
        android:toId="@+id/off"
        android:drawable="@drawable/lighting_off"/>
    <transition
        android:fromId="@+id/off"
        android:toId="@+id/on"
        android:drawable="@drawable/lighting_on"/>
</animated-selector>