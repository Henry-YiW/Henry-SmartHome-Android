<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/temperature_icon1" android:id="@+id/off" android:state_activated="false"/>
    <item android:drawable="@drawable/temperature_icon" android:id="@+id/on" android:state_activated="true"/>
    <transition
        android:fromId="@+id/on"
        android:toId="@+id/off"
        android:drawable="@drawable/thermometer_off"/>
    <transition
        android:fromId="@+id/off"
        android:toId="@+id/on"
        android:drawable="@drawable/thermometer_on"
        />
</animated-selector>