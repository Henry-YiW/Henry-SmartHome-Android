<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mywork.henry.henry_smarthome.Fragment_2"
    android:background="@drawable/background_second_new"
    android:id="@+id/content_second">

    <com.mywork.henry.henry_smarthome.Chart
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:layout_marginTop="18dp"
        android:id="@+id/chart"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />




    <ImageView
        android:layout_width="80dp"
        android:layout_height="150dp"
        android:src="@drawable/item2"
        android:id="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="214dp"/>

    <ImageView
        android:layout_width="82dp"
        android:layout_height="150dp"
        android:src="@drawable/item1"
        android:id="@+id/imageView1"
        android:layout_alignBottom="@id/imageView2"
        android:layout_toStartOf="@id/imageView2"
         />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:id="@+id/imageView3"
        app:srcCompat="@drawable/item3"
        android:layout_alignBottom="@id/imageView2"
        android:layout_toEndOf="@id/imageView2" />
    <Button
        android:layout_marginStart="25dp"
        android:layout_marginTop="90dp"
        android:id="@+id/thermometer"
        android:background="@drawable/thermometer_selector"

        android:textAlignment="gravity"
        android:gravity="bottom|center_horizontal"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_below="@+id/chart"
        android:layout_alignTop="@id/imageView1"
        android:layout_alignStart="@id/imageView1"
        />

    <Button
        android:id="@+id/electriometer"
        android:background="@drawable/electriometer_selector"
        android:textAlignment="gravity"
        android:gravity="bottom|center_horizontal"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginEnd="73dp"
        android:layout_marginStart="25dp"
        android:layout_alignTop="@+id/thermometer"
        android:layout_alignStart="@id/imageView3" />

    <Button
        android:id="@+id/hygrometer"
        android:background="@drawable/hygrometer_selector"
        android:textAlignment="gravity"
        android:gravity="bottom|center_horizontal"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginEnd="73dp"
        android:layout_marginStart="26dp"
        android:layout_alignTop="@+id/thermometer"
        android:layout_alignStart="@id/imageView2"
        />
</RelativeLayout>