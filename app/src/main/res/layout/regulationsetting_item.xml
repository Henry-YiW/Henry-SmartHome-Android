<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/frame_shape_light"
    >

    <Button
        android:padding="0dp"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="@android:color/white"
        android:text="@string/sleeptime"
        android:textSize="14sp"
        android:checked="true"
        android:id="@+id/ItemButton"
        android:contentDescription="Item"/>


    <LinearLayout
        android:layout_marginStart="2dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/start_date"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/holo_orange_dark"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <NumberPicker
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:id="@+id/startMonth"
                    android:descendantFocusability="blocksDescendants"
                    android:contentDescription="startMonth"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:layout_marginBottom="2dp"/>
                <NumberPicker
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:id="@+id/startDay"
                    android:descendantFocusability="blocksDescendants"
                    android:contentDescription="startDay"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/end_date"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/holo_orange_dark"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <NumberPicker
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:id="@+id/endMonth"
                    android:descendantFocusability="blocksDescendants"
                    android:contentDescription="endMonth"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:layout_marginBottom="2dp"/>
                <NumberPicker
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:id="@+id/endDay"
                    android:descendantFocusability="blocksDescendants"
                    android:contentDescription="endDay"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/start_time"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="?attr/colorPrimary"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <NumberPicker
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:id="@+id/startHour"
                    android:descendantFocusability="blocksDescendants"
                    android:contentDescription="startHour"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_marginBottom="2dp"/>
                <NumberPicker
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:id="@+id/startMinute"
                    android:descendantFocusability="blocksDescendants"
                    android:contentDescription="startMinute"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/end_time"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="?attr/colorPrimary"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <NumberPicker
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:id="@+id/endHour"
                    android:descendantFocusability="blocksDescendants"
                    android:contentDescription="endHour"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_marginBottom="2dp"/>
                <NumberPicker
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:id="@+id/endMinute"
                    android:descendantFocusability="blocksDescendants"
                    android:contentDescription="endMinute"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <CheckBox
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EnabledCheckBox"
        android:checked="true"
        android:contentDescription="EnabledCheckBox"/>

</LinearLayout>