<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/frame_shape"
    android:paddingStart="0dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Setting_Group">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/Setting_GroupImage"

        android:src="@drawable/light_on"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="30dp"
        android:text="@string/set_regulation"
        android:textSize="20sp"
        android:id="@+id/Setting_GroupText"
        android:layout_alignTop="@id/Setting_GroupImage"
        android:layout_alignBottom="@id/Setting_GroupImage"
        android:layout_toEndOf="@id/Setting_GroupImage"
        android:gravity="center"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/Setting_GroupText"
        android:layout_centerVertical="true"
        android:layout_marginTop="42sp"
        android:layout_marginStart="5sp"
        android:src="@android:drawable/arrow_up_float"
        android:id="@+id/Setting_GroupIndicator"/>
    </RelativeLayout>
</LinearLayout>